@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="ShowMessage">SnackBar</MudButton>

<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="@(() => Snackbar.Add("Simple Snackbar"))">
    Open snackbar
</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    [Inject] ISnackbar Snackbar { get; set; }

    void ShowMessage()
    {
        Snackbar.Add("MudBlazor is working! 🎉", Severity.Success);
    }
}